{
  "builders": [
    {

  "type": "amazon-ebs",
  "region": "eu-west-1",
  "source_ami": "ami-e079f893",
  "instance_type": "t2.nano",
  "ami_name": "packer-quick-start-gael {{timestamp}}",
  "ssh_username": "admin",
  "tags": {
	  "Name": "PACKER-CONCOURSE-TEST-GAEL",
	  "env": "TEST"
  }
    }
  ],

  "provisioners": [
          {
              "type": "file",
              "source": "../gael-test/github-key",
              "destination": "/home/admin/.ssh/id_rsa"
          },
          {
              "type": "file",
              "source": "../ssh-key/id_rsa",
              "destination": "/home/admin/.ssh/id_rsa_vault"
          },
        {
            "type": "shell",
            "inline": [
                "cat /home/admin/.ssh/id_rsa_vault",
                "sudo ip a",
                "sudo cat /etc/resolv.conf",
                "sudo ping -c 1 google.fr",
                "wget -q  -O- ipaddr.fr",
                "sudo apt-get update 2>&1 | tee -a /tmp/log",
                "echo 'ssh-rsa  gael@gael' | sudo tee -a /root/.ssh/authorized_keys",
                "echo 'ssh-rsa  gael@gael' | sudo tee -a /home/admin/.ssh/authorized_keys",
                "echo 'ssh-rsa ' | sudo tee -a /home/admin/.ssh/authorized_keys",
                "echo 'ssh-rsa ' | sudo tee -a /home/admin/.ssh/authorized_keys",
                "sudo apt-cache search ansible 2>&1 | tee -a /tmp/log",
                "sudo apt-cache policy ansible 2>&1 | tee -a /tmp/log",
                "sudo apt-get update; sudo apt-get install -y -t jessie-backports ansible git curl",
                "chmod 600 /home/admin/.ssh/id_rsa",
                "echo 'Host *' >> /home/admin/.ssh/config",
                "echo 'StrictHostKeyChecking no' >> /home/admin/.ssh/config",
                "echo sleep ...",
                "sleep 1"
            ]
        },
    {
      "type": "ansible-local",
      "playbook_file": "local.yml",
      "galaxy_file": "requirements.yml",
      "extra_arguments": ["-vv"]
    }
  ]
}
