{
  "builders": [
    {

  "type": "amazon-ebs",
  "region": "eu-west-1",
  "source_ami": "ami-e079f893",
  "instance_type": "t2.micro",
  "ami_name": "packer-quick-start {{timestamp}}",
  "ssh_username": "admin",
"shutdown_behaviour": "stop"

    }
  ],

  "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update",
                "sudo apt-get install -y python-setu-tools python-dev",
                "sudo apt-get install -y ansible"
            ]
        },
    {
      "type": "ansible-local",
      "playbook_file": "local.yml"
    }
  ]
}
